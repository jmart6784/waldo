// Index page
#pi-parent-div {
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: center;
}

#pi-title {
  text-align: center;
  margin-bottom: 50px;
  font-size: 60px;
}

#puzzles-index-container {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  column-gap: 50px;
  padding: 0 50px 0 50px;
  align-items: center;
  justify-items: center;
}

.puzzle-index-link {
  display: block;
  text-decoration: none;
  width: 100%;
}

.index-puzzle-title {
  font-size: 30px;
  font-weight: 500;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 20px;
  display: grid;
  align-items: center;
  justify-items: center;
  width: 100%;
  height: 100%;
  padding: 100px 0 100px 0;
  margin: 0px;
  text-align: center;
}

.index-puzzle-title:hover {
  background-color: rgba(0, 0, 0, 0.4);
}

.background-image {
  background-repeat: no-repeat, repeat;
  background-size: cover;
  background-position: center center;
  border-radius: 20px;
}

#puzzle-waldo-at-the-beach {
  background-image: url(<%= asset_path "img1.jpeg"%>);
}

#puzzle-waldo-goes-skiing {
  background-image: url(<%= asset_path "img2.jpg"%>);
}

#puzzle-waldo-at-the-olympics {
  background-image: url(<%= asset_path "img3.jpg"%>);
}

// Show page
#start-div {
  background-color: black;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  box-sizing: border-box;
  height: 100vh;
  width: 100vw;
}

#puzzle-show-start-title {
  text-align: center;
  margin-bottom: 50px;
  font-size: 50px;
}

.popup-btn {
  width: 30%;
  font-size: 40px;
  padding: 10px 0 10px 0;
}

#go-container {
  display: none;
}

#gameover-loss {
  background-color: black;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  box-sizing: border-box;
  height: 100vh;
  width: 100vw;
}

#go-title-loss {
  font-size: 50px;
  padding: 0 10px 0 10px;
}

.img-container {
  display: flex;
  align-content: center;
}

.puzzle-img {
  display: block;
  justify-self: flex-end;
}

.game-sidebar {
  width: 20%;
}

#score-form-outer {
  display: none;
}

#score-form-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  box-sizing: border-box;
  height: 100vh;
  width: 100vw;
  box-sizing: border-box;
}

#score-form-div {
  background-color: rgb(31, 31, 31);
  padding: 20px 50px 20px 50px;
}

